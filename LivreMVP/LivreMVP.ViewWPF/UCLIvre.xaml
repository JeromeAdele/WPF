<UserControl x:Class="LivreMVP.ViewWPF.UCLIvre"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LivreMVP.ViewWPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="0,2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding Titre}" HorizontalAlignment="Left" Grid.Column="0" />
        <TextBlock Text="{Binding Auteur}" HorizontalAlignment="Left" Grid.Column="0"/>
        <TextBlock Text="{Binding Genre}" HorizontalAlignment="Left" Grid.Column="0" />
        <CheckBox IsChecked="{Binding IsChecked}" Checked="onCheckBox_Checked" HorizontalAlignment="Right" Grid.Column="1"/>
    </Grid>
</UserControl>
