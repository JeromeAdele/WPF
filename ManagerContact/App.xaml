<Application x:Class="ManagerContact.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:ManagerContact.Converters"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                 <converters:BooleanToColorConverter x:Key="cvBooleanColorConventer"/>
                    <converters:BooleanToGenreConverter x:Key="cvBooleanToGenreConventer"/>
                    <Style x:Key="PhoneTextTitle1Style" TargetType="TextBlock">
                        <Setter Property="FontSize" Value="20"/>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>